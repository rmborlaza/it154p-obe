<ContentDialog
    x:Class="DesktopApp.ResetPasswordDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DesktopApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Reset Password"
    PrimaryButtonText="Reset"
    SecondaryButtonText="Cancel"
    PrimaryButtonClick="ContentDialog_PrimaryButtonClick"
    DefaultButton="Primary">

    <StackPanel Spacing="4">
        <PasswordBox x:Name="CurrentPassbox" PlaceholderText="Current Password" />
        <PasswordBox x:Name="NewPassbox" PlaceholderText="New Password" />
        <PasswordBox x:Name="ConfirmPassbox" PlaceholderText="Confirm Password" />
    </StackPanel>
</ContentDialog>
